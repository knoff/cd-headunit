[Unit]
Description=Relocate mutable dirs to /data via bind mounts
DefaultDependencies=no
After=local-fs.target
Before=multi-user.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/bash -c '\
  mkdir -p /data/var_lib_docker /data/var_log /data/srv; \
  mount -a \
'

[Install]
WantedBy=multi-user.target
