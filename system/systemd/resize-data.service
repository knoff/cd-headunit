[Unit]
Description=Expand Data Partition (HeadUnit)
After=local-fs.target
Wants=local-fs.target
# Запускаем до того, как приложения начнут писать данные
Before=systemd-user-sessions.service

[Service]
Type=oneshot
ExecStart=/usr/local/bin/resize-data
RemainAfterExit=yes
TimeoutSec=120

[Install]
WantedBy=multi-user.target
